    head
        title Speed Vocab
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(property="og:title", content="SpeedVocab")
        meta(property="og:site_name", content="Learn new words faster than ever!")
        meta(property="fb:app_id", content="560543297416180")
        meta(property="og:url", content="http://chuson.herokuapp.com")
