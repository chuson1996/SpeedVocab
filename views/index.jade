        meta(property="og:description", content="SpeedVocab is established by Chu Hoang Son. Inspired by Quizlet, he developed this project to help himself remember new terms as efficient as possible. ")
        link(data-require="bootstrap@*", data-semver="3.3.2", rel="stylesheet", href="bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="shortcut icon",href="icons/favicon.ico",type="image/x-icon")
        script(src="bower_components/jquery/dist/jquery.min.js")
